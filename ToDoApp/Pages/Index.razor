@page "/"
@using TodoApp.Model;

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <input type="text" @bind="Todo.Title" class="form-control"  placeholder="Title"/>

        </div>
        <div class="col-md-6">
            <input type="date" @bind="Todo.CompletionDate" class="form-control"  placeholder="Date"/>

        </div>
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-success" @onclick="AddTaskEvent">Add Task</button>

    </div>
</div>

@*<DetailTodo Todo="DetailTodo"/>
*@
@code{
    public List<Todo> Todos { get; set; } = new List<Todo>();
    public Todo Todo { get; set; } = new Todo();
    //public Todo DetailTodo { get; set; } = new();

    void AddTaskEvent()
    {
        Todos.Add(Todo);
    }

}
